<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/consultante"
    tools:context=".Vistas.Consultante.reporteRutina">

    <LinearLayout
        android:layout_width="363dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtTituloCargarEmocion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/redhat_medium"
            android:text="@string/tituloInformeRutina"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="26sp" />

        <Spinner
            android:id="@+id/spMeses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:background="@drawable/border" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#ffffff" >

            <TableRow>

                <TextView
                    android:background="#4167b2"
                    android:textColor="@color/white"
                    android:text="Rutina" />

                <TextView
                    android:background="#4167b2"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:text="Porcentaje de realizaciÃ³n" />

            </TableRow>


            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/redhat_regular"
                    android:text="@string/rutinaDieta"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginStart="10sp" />

                <ProgressBar
                    android:id="@+id/barDieta"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    
                    android:progressDrawable="@drawable/progress_bar_rutina"
                    android:layout_marginEnd="10sp"
                    android:layout_marginVertical="5sp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/redhat_regular"
                    android:text="@string/rutinaConsumo"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginStart="10sp" />

                <ProgressBar
                    android:id="@+id/barConsumo"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    
                    android:progressDrawable="@drawable/progress_bar_rutina"
                    android:layout_marginEnd="10sp"
                    android:layout_marginVertical="5sp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/redhat_regular"
                    android:text="@string/rutinaEjercicio"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginStart="10sp" />

                <ProgressBar
                    android:id="@+id/barEjercicio"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    
                    android:progressDrawable="@drawable/progress_bar_rutina"
                    android:layout_marginEnd="10sp"
                    android:layout_marginVertical="5sp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/redhat_regular"
                    android:text="@string/rutinaDescanso"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginStart="10sp" />

                <ProgressBar
                    android:id="@+id/barDescanso"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    
                    android:progressDrawable="@drawable/progress_bar_rutina"
                    android:layout_marginEnd="10sp"
                    android:layout_marginVertical="5sp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/redhat_regular"
                    android:text="@string/rutinaAmbiente"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginStart="10sp" />

                <ProgressBar
                    android:id="@+id/barAmbiente"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    
                    android:progressDrawable="@drawable/progress_bar_rutina"
                    android:layout_marginEnd="10sp"
                    android:layout_marginVertical="5sp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/redhat_regular"
                    android:text="@string/rutinaHigiene"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginStart="10sp" />

                <ProgressBar
                    android:id="@+id/barHigiene"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    
                    android:progressDrawable="@drawable/progress_bar_rutina"
                    android:layout_marginEnd="10sp"
                    android:layout_marginVertical="5sp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/redhat_regular"
                    android:text="@string/rutinaEquilibrio"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginStart="10sp" />

                <ProgressBar
                    android:id="@+id/barEquilibrio"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    
                    android:progressDrawable="@drawable/progress_bar_rutina"
                    android:layout_marginEnd="10sp"
                    android:layout_marginVertical="5sp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/redhat_regular"
                    android:text="@string/rutinaSocial"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginStart="10sp" />

                <ProgressBar
                    android:id="@+id/barSocial"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    
                    android:progressDrawable="@drawable/progress_bar_rutina"
                    android:layout_marginEnd="10sp"
                    android:layout_marginVertical="5sp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/redhat_regular"
                    android:text="@string/rutinaOcio"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginStart="10sp" />

                <ProgressBar
                    android:id="@+id/barOcio"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    
                    android:progressDrawable="@drawable/progress_bar_rutina"
                    android:layout_marginEnd="10sp"
                    android:layout_marginVertical="5sp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/redhat_regular"
                    android:text="@string/rutinaNaturaleza"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginStart="10sp" />

                <ProgressBar
                    android:id="@+id/barNaturaleza"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    
                    android:progressDrawable="@drawable/progress_bar_rutina"
                    android:layout_marginEnd="10sp"
                    android:layout_marginVertical="5sp"/>
            </TableRow>

        </TableLayout>

        <TextView
            android:id="@+id/txtResultadoRutina"
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            android:background="@drawable/border"
            android:text=""
            android:textColor="@color/black" />

    </LinearLayout>

</FrameLayout>