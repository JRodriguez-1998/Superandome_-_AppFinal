<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameCambiarPass"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profesional"
    tools:context=".Vistas.Profesional.cambiar_password_profesional">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="114dp"
                        android:layout_height="107dp"
                        android:src="@drawable/logo_soyuz" />

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="20dp">

                            <TextView
                                android:id="@+id/tvCambiarPass"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/redhat_medium"
                                android:text="Cambiar Contraseña"
                                android:textAlignment="center"
                                android:textColor="#FFFFFF"
                                android:textSize="30sp" />
                        </TableRow>
                    </TableLayout>

                </TableRow>

                <TextView
                    android:id="@+id/tvNicknameUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="@font/questrial_regular"
                    android:text="NicknameUsuario"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="italic"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/tvPassActual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/questrial_regular"
                    android:text="Ingrese su Contraseña Actual"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <EditText
                    android:id="@+id/editTextPassActual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:fontFamily="@font/questrial_regular"
                    android:hint="contraseña actual"
                    android:inputType="textPassword"
                    android:minHeight="48dp"
                    android:textAlignment="center"
                    android:textAllCaps="false" />

                <TextView
                    android:id="@+id/tvPassNueva"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/questrial_regular"
                    android:text="Ingrese la Nueva Contraseña"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <EditText
                    android:id="@+id/editTextPassNueva"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:fontFamily="@font/questrial_regular"
                    android:hint="nueva contraseña"
                    android:inputType="textPassword"
                    android:minHeight="48dp"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/tvConfirmPassNueva"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/questrial_regular"
                    android:text="Confirme Nueva Contraseña"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <EditText
                    android:id="@+id/editTextConfPassNueva"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:fontFamily="@font/questrial_regular"
                    android:hint="confirme nueva contraseña"
                    android:inputType="textPassword"
                    android:minHeight="48dp"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/btnConfirmar"
                    android:layout_width="169dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:backgroundTint="#4167B2"
                    android:fontFamily="@font/questrial_regular"
                    android:text="Confirmar"
                    android:textAllCaps="false"
                    android:textSize="20sp" />

            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>